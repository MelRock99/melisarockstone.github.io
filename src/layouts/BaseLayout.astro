
---
import "../styles/global.css";

const base = import.meta.env.BASE_URL;

const {
  title = "MelisaRockStone Music",
  description = "Official site for MelisaRockStone Music — videos, events, and merch.",
} = Astro.props;

const email = "Melisarockstone@gmail.com";

const socials = {
  facebook: "https://www.facebook.com/57VortexRock",
  instagram: "https://www.instagram.com/melisarockstone/",
  bluesky: "",
  substack: "https://YOURNAME.substack.com",
};


<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
<header>
  <div style="max-width:980px;margin:0 auto;padding:18px 16px;display:flex;gap:14px;align-items:center;justify-content:space-between;flex-wrap:wrap;">
    <a href={base} style="font-weight:800;letter-spacing:.3px;">
      MelisaRockStone Music
    </a>

    <nav style="display:flex;gap:14px;flex-wrap:wrap;">
      <a href={base}>Home</a>
      <a href={`${base}events/`}>Events</a>
      <a href={`${base}merch/`}>Merch</a>
      <a href={`${base}contact/`}>Contact</a>
    </nav>
  </div>
</header>

    <main style="max-width:980px;margin:0 auto;padding:28px 16px;">
      <slot />
    </main>

    <footer>
      <div style="max-width:980px;margin:0 auto;padding:18px 16px;display:flex;gap:10px;flex-wrap:wrap;align-items:center;justify-content:space-between;">
        <div style="font-size:14px;">
          © {new Date().getFullYear()} MelisaRockStone Music •
          <a href={`mailto:${email}`}>{email}</a>
        </div>

<div style="display:flex;gap:12px;font-size:14px;">
  <a href={socials.facebook} target="_blank">Facebook</a>
  <a href={socials.instagram} target="_blank">Instagram</a>
  <a href={socials.bluesky} target="_blank">Bluesky</a>
  <a href={socials.substack} target="_blank">Substack</a>
</div>

             </div>
    </footer>
  </body>
</html>
